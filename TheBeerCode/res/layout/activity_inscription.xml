<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Inscription" >



        <TextView
            android:id="@+id/lblogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Login"/>

        <EditText
            android:id="@+id/edlogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" >
		</EditText>
	
		<TextView
            android:id="@+id/lbpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Password"/>

        <EditText
            android:id="@+id/edpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" >
		</EditText>

		<TextView
            android:id="@+id/lbconfPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ConfPassword"/>

        <EditText
            android:id="@+id/edconfPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" >
		</EditText>

	 	<TextView
            android:id="@+id/lbmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Mail"/>

        <EditText
            android:id="@+id/edmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" >
		</EditText>

		<TextView
            android:id="@+id/lbpays"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Country"/>

        <EditText
            android:id="@+id/edpays"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" >
		</EditText>

		<LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal" >

		        <Button
		           android:id="@+id/validerInscription"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="1" 
		           android:text="@string/ConfSignUp" />
		       
		        <Button
		           android:id="@+id/annulerInscription"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="1" 
		           android:text="@string/Cancel" />
	   </LinearLayout>
	   
 </LinearLayout>